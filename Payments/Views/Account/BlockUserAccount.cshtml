@model Payments.ViewModels.Account.UserBlockData

@{
    ViewBag.Title = "Block user";
}

<h2>Информация о пользователе</h2>
<br />
<hr />

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Email)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Email)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.LockoutEnabled)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.LockoutEnabled)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.DateTimeBlock)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.DateTimeBlock)
    </dd>
</dl>
<hr />
<br />
@using (Html.BeginForm("BlockUserAccount", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <div class="form-group">
        @Html.LabelFor(model => model.DateTimeBlock, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.DateTimeBlock, new
            {
                htmlAttributes = new
                {
                    @class = "form-control"
                }
            })
            @Html.ValidationMessageFor(model => model.DateTimeBlock, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div>
            <input type="submit" value="Заблокировать" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
